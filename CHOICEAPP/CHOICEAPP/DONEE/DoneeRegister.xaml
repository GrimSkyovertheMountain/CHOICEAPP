<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CHOICEAPP.DoneeRegister"
             BackgroundImageSource="Background.jpg">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Entry Placeholder="Username" x:Name="UserEntry" />
            <Entry Placeholder="Email" x:Name="emailEntry" Keyboard="Email" />
            <Entry Placeholder="Password" x:Name="passwordEntry" IsPassword="True" />
            <Entry Placeholder="Confirm Password" x:Name="confirmPasswordEntry" IsPassword="True" />

            <Button Text="Register" Clicked="RegisterButton_Clicked" />
            <Label x:Name="registrationStatus" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>